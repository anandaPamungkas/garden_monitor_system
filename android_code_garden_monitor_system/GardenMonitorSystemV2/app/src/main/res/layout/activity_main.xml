<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/white">
        <TextView
            android:id="@+id/lightCardHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Light Intensity"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:background="#187bcd"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            android:src="@drawable/sunlight_icon"></ImageView>
        <TextView
            android:id="@+id/currentLightTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Light Intensity"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/lightValueTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000 lux"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:textColor="#FACA0F"
            android:textStyle="bold"
            android:textSize="20sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/white">
        <TextView
            android:id="@+id/moistureCardHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Soil Moisture"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:background="#187bcd"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            android:src="@drawable/soil_moisture_icon"></ImageView>
        <TextView
            android:id="@+id/currentMoistureTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Soil Moisture"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/moistureValueTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="80 %"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:textColor="#d2876e"
                android:textStyle="bold"
                android:textSize="20sp"
                />
        <Button
            android:id="@+id/btnPump"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Turn On Pump"/>

    </LinearLayout>



</LinearLayout>